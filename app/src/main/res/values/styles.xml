<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitleBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoTitleBar.Splash">
        <item name="android:windowBackground">@drawable/shape_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--load more-->
    <style name="LoadingProgressBar">
        <item name="android:indeterminateDrawable">@drawable/anim_loading</item>
        <item name="android:minWidth">27dip</item>
        <item name="android:maxWidth">27dip</item>
        <item name="android:minHeight">27dip</item>
        <item name="android:maxHeight">27dip</item>
    </style>
</resources>
